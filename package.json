{
  "name": "lg-coda-shopify",
  "version": "0.0.20",
  "description": "Coda pack to add misc Shopify functions for Lydia Gautier",
  "scripts": {
    "postinstall": "npx patch-package",
    "test": "vitest --silent",
    "test:coverage": "vitest --coverage --silent",
    "set_release:admin": "IS_ADMIN_RELEASE=true node set-pack-config.js",
    "set_release:user": "IS_ADMIN_RELEASE=false node set-pack-config.js",
    "push:admin": "yarn set_release:admin && coda upload pack.ts",
    "push:user": "yarn set_release:user && coda upload pack.ts",
    "check:circular-dependencies": " npx dpdm --no-warning --no-tree -T ./pack.ts",
    "check:types": "tsc --noEmit",
    "check:size": "coda build pack.ts -o ./buildTest && npx source-map-explorer ./buildTest/bundle.js ./buildTest/bundle.js.map && rm -rf ./buildTest",
    "check:unused-exports": "npx ts-unused-exports ./tsconfig.json",
    "check:unused": "knip",
    "regen:all": "yarn regen:graphql && yarn regen:constants && yarn regen:interfaces",
    "regen:constants": "yarn ts-node ./regen-constants-from-admin-types.ts",
    "regen:interfaces": "yarn ts-node ./regen-interfaces-from-coda-schemas.ts",
    "regen:graphql": "graphql-codegen --config codegen.ts",
    "validate:admin": "yarn set_release:admin && coda validate pack.ts",
    "validate:user": "yarn set_release:user && coda validate pack.ts",
    "test-metafield-update": "yarn set_release:admin && coda execute ./pack.ts Metafields:update --dynamicUrl=OnlineStoreArticle \"lg_custom.audio\" \"$(cat test-update-metafield.json | tr '\n' ' ')\""
  },
  "author": "Martin Portevin <contact@martinportevin.fr> (https://www.martinportevin.fr/)",
  "license": "MIT",
  "dependencies": {
    "@0no-co/graphql.web": "^1.0.4",
    "@codahq/packs-sdk": "^1.0.5",
    "@thebeyondgroup/shopify-rich-text-renderer": "^1.0.0",
    "gql.tada": "^1.3.5",
    "remove-accents": "^0.5.0",
    "striptags": "^3.2.0",
    "to-pascal-case": "^1.0.0",
    "to-sentence-case": "^1.0.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.6.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@shopify/shopify-api": "^9.0.1",
    "@types/node": "^18",
    "@vitest/coverage-v8": "^1.4.0",
    "gas-coda-export-bills": "github:DrMartinGonzo/gas-coda-export-bills.git#^0.2.0",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "json-schema": "^0.4.0",
    "knip": "^5.1.1",
    "ts-node": "^10.9",
    "typescript": "^5.4.2",
    "vitest": "^1.4"
  }
}
